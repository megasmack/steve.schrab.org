{
  "name": "steve.schrab.org",
  "version": "2.0.0",
  "description": "A starter repository for a blog web site using the Eleventy static site generator.",
  "scripts": {
    "start": "concurrently --kill-others \"npm run sass:watch\" \"npx eleventy --serve\"",
    "build": "npm run sass:build | npx eleventy",
    "watch": "npx eleventy --watch",
    "debug": "DEBUG=* npx eleventy",
    "build-task:scss-compile": "node-sass-chokidar --source-map true _scss/ -o css",
    "build-task:autoprefixer": "postcss css/*.css --use autoprefixer -d css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar '_scss/**/*.scss' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/megasmack/steve.schrab.org.git"
  },
  "author": {
    "name": "Steve Schrab",
    "url": "https://steve.schrab.org/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/megasmack/steve.schrab.org/issues"
  },
  "homepage": "https://github.com/megasmack/steve.schrab.org#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@11ty/eleventy-plugin-rss": "^1.0.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.1",
    "autoprefixer": "^9.6.0",
    "chokidar-cli": "^1.2.2",
    "concurrently": "^4.1.0",
    "luxon": "^1.12.0",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "node-sass-chokidar": "^1.3.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2"
  }
}
